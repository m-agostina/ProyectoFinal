<body style="background-color: #eee;">
    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card p-4" style="width: 30rem; font-size: 1rem" >
            <h1 class="text-center mb-4">REGISTRATE</h1>
            <form action="/auth/register" method="POST">
                <div class="form-floating mb-4">
                    <input type="text" class="form-control form-control-lg" name="first_name" placeholder="Nombre">
                    <label for="nombreInput">Nombre</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="text" class="form-control form-control-lg" name="last_name" placeholder="Apellido">
                    <label for="apellidoInput">Apellido</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="number" class="form-control form-control-lg" name="age" placeholder="Edad">
                    <label for="edadInput">Edad</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="email" class="form-control form-control-lg" name="email" placeholder="name@example.com">
                    <label for="">Correo electrónico</label>
                </div>
                <div class="form-floating mb-4">
                    <input type="password" class="form-control form-control-lg" name="password" placeholder="Password">
                    <label for="passwordInput">Contraseña</label>
                </div>
                <div class="d-grid">
                    <button class="btn btn-secondary btn-lg" type="submit">Registrarse</button>
                </div>
            </form>
        </div>
    </div>
</body>
